<div class="min-h-screen bg-gray-900 py-8">
  <div class="mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gray-800 shadow-xl rounded-lg">
      <div class="p-6 sm:p-8">
        <h1 class="text-3xl font-bold text-white mb-8">Labor Party Supporter Survey</h1>

        <%= form_with model: @survey_response, local: true, class: "space-y-6" do |f| %>
          <% if @survey_response.errors.any? %>
            <div class="bg-red-900 p-4 rounded-md">
              <div class="text-sm text-red-200">
                <h2><%= pluralize(@survey_response.errors.count, "error") %> prohibited this survey from being saved:</h2>
                <ul class="list-disc pl-5">
                  <% @survey_response.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-300" %>
                <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>

              <div>
                <%= f.label :discord_handle, "Discord Username (optional)", class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_field :discord_handle, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <% [
              [:interest, "Why are you interested in supporting a new Labor Party?"],
              [:values, "What values or principles are most important to you?"],
              [:goals, "What do you envision as the primary goals of a new Labor Party?"],
              [:top_issues, "What are the top issues you care about?"],
              [:community_impact, "What are the most pressing labor issues in your area?"],
              [:political_background, "Have you been involved in any political or activist movements before?"],
              [:involvement, "Would you like to get involved? If so, how?"],
              [:skills, "What skills can you offer?"],
              [:networking, "Do you know others who might be interested?"],
              [:feedback, "Any feedback or suggestions?"]
            ].each do |field, label| %>
              <div>
                <%= f.label field, label, class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_area field, rows: 4, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            <% end %>

            <div>
              <%= f.label :meeting_preferences, "Preferred days and times for Discord meetings", class: "block text-sm font-medium text-gray-300" %>
              <%= f.text_area :meeting_preferences, rows: 2, placeholder: "Example: Weekday evenings after 6pm EST, or Sunday afternoons", class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm placeholder-gray-500" %>
            </div>

            <% [
              [:availability, "What is your general availability for other activities?"],
              [:contact_method, "Preferred method of communication (email, Discord, phone, etc.)"],
              [:demographics, "Demographic information (age group, occupation, region)"]
            ].each do |field, label| %>
              <div>
                <%= f.label field, label, class: "block text-sm font-medium text-gray-300" %>
                <%= f.text_field field, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>
            <% end %>

            <div class="space-y-4">
              <div class="flex items-start">
                <%= f.check_box :contact_permission, class: "h-4 w-4 rounded border-gray-600 bg-gray-700 text-indigo-600 focus:ring-indigo-500" %>
                <%= f.label :contact_permission, "Can we contact you about getting involved?", class: "ml-2 block text-sm text-gray-300" %>
              </div>

              <div class="flex items-start">
                <%= f.check_box :fundraising, class: "h-4 w-4 rounded border-gray-600 bg-gray-700 text-indigo-600 focus:ring-indigo-500" %>
                <%= f.label :fundraising, "Would you be willing to contribute financially?", class: "ml-2 block text-sm text-gray-300" %>
              </div>
            </div>
          </div>

          <div class="pt-6">
            <%= f.submit "Submit", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-900" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
