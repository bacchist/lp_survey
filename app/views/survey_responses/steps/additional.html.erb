<div class="min-h-screen bg-gray-900 py-8">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gray-800 shadow-xl rounded-lg">
      <div class="p-6 sm:p-8">
        <h1 class="text-3xl font-bold text-white mb-8">Labor Party Supporter Survey</h1>
        
        <%= render 'survey_responses/progress' %>

        <%= form_with model: @survey_response, url: update_survey_step_path(@step), method: :patch, class: "space-y-6" do |f| %>
          <% if @survey_response.errors.any? %>
            <div class="bg-red-900 p-4 rounded-md">
              <div class="text-sm text-red-200">
                <h2><%= pluralize(@survey_response.errors.count, "error") %> prohibited this survey from being saved:</h2>
                <ul class="list-disc pl-5">
                  <% @survey_response.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="space-y-6">
            <div>
              <%= f.label :demographics, "Demographic information (optional)", class: "block text-sm font-medium text-gray-300" %>
              <p class="text-xs text-gray-400 mt-1 mb-2">Age group, occupation, region - this helps us understand who we're reaching</p>
              <%= f.text_area :demographics, rows: 2, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :networking, "Do you know others who might be interested?", class: "block text-sm font-medium text-gray-300" %>
              <p class="text-xs text-gray-400 mt-1 mb-2">Consider friends, family, coworkers, or other activists who might want to get involved</p>
              <%= f.text_area :networking, rows: 3, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div class="space-y-4">
              <div class="flex items-start">
                <%= f.check_box :contact_permission, class: "h-4 w-4 rounded border-gray-600 bg-gray-700 text-indigo-600 focus:ring-indigo-500" %>
                <%= f.label :contact_permission, "Can we contact you about getting involved?", class: "ml-2 block text-sm text-gray-300" %>
              </div>

              <div>
                <%= f.label :contact_method, "Preferred method of contact", class: "block text-sm font-medium text-gray-300" %>
                <p class="text-xs text-gray-400 mt-1 mb-2">Email, Discord, or other method</p>
                <%= f.text_field :contact_method, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              </div>

              <div class="flex items-start">
                <%= f.check_box :fundraising, class: "h-4 w-4 rounded border-gray-600 bg-gray-700 text-indigo-600 focus:ring-indigo-500" %>
                <%= f.label :fundraising, "Would you be willing to contribute financially?", class: "ml-2 block text-sm text-gray-300" %>
              </div>
            </div>

            <div>
              <%= f.label :feedback, "Any additional feedback or suggestions?", class: "block text-sm font-medium text-gray-300" %>
              <p class="text-xs text-gray-400 mt-1 mb-2">We welcome any thoughts on how to build an effective labor movement</p>
              <%= f.text_area :feedback, rows: 3, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div class="pt-6 flex justify-between">
            <%= link_to "← Previous", survey_step_path('involvement'), class: "px-4 py-2 border border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-900" %>
            <%= f.submit "Submit Survey", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-900" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 