<div class="min-h-screen bg-gray-900 py-8">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gray-800 shadow-xl rounded-lg">
      <div class="p-6 sm:p-8">
        <h1 class="text-3xl font-bold text-white mb-8">Labor Party Supporter Survey</h1>
        
        <%= render 'survey_responses/progress' %>

        <%= form_with model: @survey_response, url: update_survey_step_path(@step), method: :patch, class: "space-y-6" do |f| %>
          <% if @survey_response.errors.any? %>
            <div class="bg-red-900 p-4 rounded-md">
              <div class="text-sm text-red-200">
                <h2><%= pluralize(@survey_response.errors.count, "error") %> prohibited this survey from being saved:</h2>
                <ul class="list-disc pl-5">
                  <% @survey_response.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="space-y-6">
            <div>
              <%= f.label :top_issues, "What are the top issues you care about?", class: "block text-sm font-medium text-gray-300" %>
              <p class="text-xs text-gray-400 mt-1 mb-2">For example: wages, healthcare, housing, education, workplace democracy</p>
              <%= f.text_area :top_issues, rows: 4, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :community_impact, "What are the most pressing labor issues in your area?", class: "block text-sm font-medium text-gray-300" %>
              <p class="text-xs text-gray-400 mt-1 mb-2">Consider local working conditions, union activity, and specific challenges in your community</p>
              <%= f.text_area :community_impact, rows: 4, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :political_background, "Have you been involved in any political or activist movements before?", class: "block text-sm font-medium text-gray-300" %>
              <p class="text-xs text-gray-400 mt-1 mb-2">Include any experience with unions, political organizations, or community activism</p>
              <%= f.text_area :political_background, rows: 4, class: "mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div class="pt-6 flex justify-between">
            <%= link_to "← Previous", survey_step_path('values'), class: "px-4 py-2 border border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-900" %>
            <%= f.submit "Next Step →", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 focus:ring-offset-gray-900" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 